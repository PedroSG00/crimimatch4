<div class="container">

    <h2 class="mt-3 mb-3">Criminals List</h2>

    <nav aria-label="Page navigation example">
        <ul class="pagination pagination-md ">
            <li class="page-item disabled">
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=1">1</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=2">2</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=3">3</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=4">4</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=5">5</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=6">6</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=7">7</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=8">8</a></li>
            <li class="page-item"><a class="page-link text-dark" href="/wanted/api?page=9">9</a></li>
            <li class="page-item">
            </li>
        </ul>
    </nav>

    <div class="row">
        {{#each arr}}
        <div class="col-md-3 d-flex justify-content-center mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{images.1.original}}" class="card-img-top img-fluid"
                    onerror="this.src='https://www.nicepng.com/png/detail/73-730154_open-default-profile-picture-png.png';"
                    alt="No criminal image found">
                <div class="card-body">
                    <p class="card-text">{{title}}</p>
                </div>
                <a class="btn btn-dark" href="/wanted/api/{{title}}/details">Details</a>
            </div>
        </div>
        {{/each}}
    </div>


</div>
</div>