<h2>Criminals List</h2>

<div class="container">
    <div class="row">
        {{#each arr}}
        <div class="col-md-3 d-flex justify-content-center mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{images.1.original}}" class="card-img-top" alt="No criminal image found">
                <div class="card-body">
                    <p class="card-text">{{title}}</p>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>