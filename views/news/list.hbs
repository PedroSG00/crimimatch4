<div class="container d-flex justify-content-around">
    <div class="row">

        {{#each news}}
        <div class="mt-3 mb-2 col-md-4 d-flex align-items-stretch">
            <div class="card column" style="width: 400px;">
                <div class="card-body">
                    <img src="{{image}}" alt="CrimeImage" class="img-fluid image-size mt-2">
                    <h5 class="card-title text-center fw-bold mt-2">{{header}}</h5>
                    <a href="/news/{{_id}}" class="card-link d-grid text-center btn btn-outline-danger">See more</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>

</div>