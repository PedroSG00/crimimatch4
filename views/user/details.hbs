<div class="container d-flex justify-content-center flex-column align-items-center">

    <h2>{{username}} profile</h2>

    <div class="mt-3 text-center">
        <h3>Name: {{username}}</h3>
        <hr>
        <h3>Email: {{email}}</h3>
        <hr>
        <h3>Role: {{role}}</h3>


        <div class="d-flex justify-content-center mt-3">
            <form action="/user/list/{{_id}}/delete" method="POST">
                <input type="submit" value="Delete your profile" class="btn btn-danger btn-sm me-1">
            </form>

            <a href="/user/list/{{_id}}/edit" class="btn btn-success btn-sm">Edit profile</a>
        </div>


    </div>