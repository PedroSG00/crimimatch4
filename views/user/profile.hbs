<div class="container d-flex justify-content-center flex-column align-items-center">

    <h2>Your profile</h2>

    <div class="mt-3 text-center">

        <img src="{{userDetails.imageUrl}}" alt="Profile Image">

        <h4>Name: {{userDetails.username}}</h4>
        <hr>
        <h4>Email: {{userDetails.email}}</h4>
        <hr>
        <h4>Role: {{userDetails.role}}</h4>


        <div class="d-flex justify-content-center mt-3">
            <form action="/user/profile/{{_id}}/delete" method="POST">
                <input type="submit" value="Delete your profile" class="btn btn-danger btn-sm me-1">
            </form>

            <a href="/user/profile/{{_id}}/edit" class="btn btn-success btn-sm">Edit profile</a>
        </div>

        {{#if notEmpty}}
        <hr class="mt-5">
        <h3 class="m-5">Favorites news</h3>
        <div class="row m-3">
            {{#each userDetails.favorites}}

            <div class="col-md-6">
                <div class="card m-3" style="width: 400px;">
                    <div class="card-body">
                        <img src="{{image}}" alt="CrimeImage" class="img-fluid image-size mt-2">
                        <h5 class="card-title text-center fw-bold mt-2">{{header}}</h5>
                        <a href="/news/{{_id}}" class="card-link d-grid text-center btn btn-outline-danger">See
                            more</a>
                    </div>
                </div>
            </div>


            {{/each}}

        </div>
        {{/if}}




    </div>
</div>